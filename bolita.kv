#:kivy 2.3.0

<Label>:
    color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<TextInput>:
    background_color: 1, 1, 1, 1
    foreground_color: 0, 0, 0, 1
    padding: 10
    multiline: False
    size_hint_y: None
    height: 40

<Button>:
    background_color: 0.5, 0.0, 0.1, 1
    color: 1, 1, 1, 1
    size_hint_y: None
    height: 40
    font_size: 16

<BoxLayout>:
    background_color: 1, 1, 1, 1
    foreground_color: 0, 0, 0, 1

<MainWidget>:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    # Encabezado
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1
        Label:
            text: 'Florida'
            font_size: 20
            halign: 'left'
            size_hint_x: 0.7
        Label:
            id: limpio_label
            text: 'Limpio: 0.00'
            font_size: 20
            halign: 'right'
            size_hint_x: 0.3

    # Tabla
    GridLayout:
        cols: 3
        spacing: 5
        size_hint_y: 0.9

        # === Columna Fijos ===
        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            Label:
                text: 'Fijos'
                font_size: 15
                bold: True
                size_hint_y: 0.1
            ScrollView:
                do_scroll_x:False
                do_scroll_y:True
                Label:
                    id: fijos_list
                    text: ''
                    size_hint_y: 1
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.1
                TextInput:
                    id: fijos_num
                    hint_text: '#__'
                    size_hint_x: 0.5
                TextInput:
                    id: fijos_amount
                    hint_text: '$__'
                    size_hint_x: 0.5
            Button:
                text: 'Agregar'
                size_hint_y: 0.1
                on_press: root.add_fijos()

        # === Columna Parles ===
        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            Label:
                text: 'Parles'
                font_size: 15
                bold: True
                size_hint_y: 0.1
            ScrollView:
                do_scroll_x:False
                do_scroll_y:True
                Label:
                    id: parles_list
                    text: ''
                    size_hint_y: 1
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.1
                TextInput:
                    id: parles_num
                    hint_text: '#__'
                    size_hint_x: 0.5
                    multiline: True
                TextInput:
                    id: parles_amount
                    hint_text: '$__'
                    size_hint_x: 0.5
            Button:
                text: 'Agregar'
                size_hint_y: 0.1
                on_press: root.add_parles()

        # === Columna Corridos ===
        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            Label:
                text: 'Corridos'
                font_size: 15
                bold: True
                size_hint_y: 0.1
            ScrollView:
                do_scroll_x:False
                do_scroll_y:True
                Label:
                    id: centenas_list
                    text: ''
                    size_hint_y: 1
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.1
                TextInput:
                    id: centenas_num
                    hint_text: '#__'
                    size_hint_x: 0.5
                TextInput:
                    id: centenas_amount
                    hint_text: '$__'
                    size_hint_x: 0.5
            Button:
                text: 'Agregar'
                size_hint_y: 0.1
                on_press: root.add_centenas()

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1
        Button:
            text: 'Eliminar Todo'
            on_press: root.clean_dates()
        Button:
            text: 'Ver Totales'
            on_press: root.show_totals()